<html>
<HEAD>
<HTA:APPLICATION ID="oHTA"
     APPLICATIONNAME="myApp"
     BORDER="thin"
     BORDERSTYLE="normal"
     CAPTION="yes"
     ICON="icon.ico"
	 SCROLL="no"
     MAXIMIZEBUTTON="yes"
     MINIMIZEBUTTON="yes"
     SHOWINTASKBAR="yes"
     SINGLEINSTANCE="yes"
     SYSMENU="yes"
     VERSION="1.1"
	 CONTEXTMENU="no"
     WINDOWSTATE="normal"/>  
<SCRIPT Language="VBScript">
Sub Window_onLoad
    window.resizeTo 460 , 260 
End Sub

Sub SelectFile
    pngFile.value = ""
    strStartPath = ""
    strFilter = "Image (*.png;*.apng)|*.png;*.apng|All Files (*.*)|*.*|"
    strCaption = "Select a File"
    pngFile.value = Dlg.openfiledlg(CStr(strStartPath), , CStr(strFilter), CStr(strCaption))
	prev.src=pngFile.value
End Sub

Sub Process
    'Get file path from INPUT
    Dim file: file = pngFile.Value
	
	'hide and show buttons
	logs.style.display= "table"
	comenz.style.display= "none"
	brow.style.display= "none"
	pngFile.style.display= "none"
	
    Set objShell = CreateObject("Wscript.Shell")
	objShell.Run "cmd /c rmdir ips /s/q",0,true	
    objShell.Run "cmd /c mkdir ips\atmosphere\exefs_patches\logo",0,true
    objShell.Run "cmd /c mkdir ips\sxos\exefs_patches\logo",0,true
	
	logs.Value= "Creando ips para 10.x.x"
    objShell.Run "pito.exe AAA\10.x.x "& file,0,true
	logs.Value= "Creando ips para 9.x.x"
    objShell.Run "pito.exe AAA\9.x.x "& file,0,true
	logs.Value= "Creando ips para 8.x.x"
    objShell.Run "pito.exe AAA\8.x.x "& file,0,true
	logs.Value= "Creando ips para 7.x.x"
    objShell.Run "pito.exe AAA\7.x.x "& file,0,true
	logs.Value= "Creando ips para 6.x.x"
    objShell.Run "pito.exe AAA\6.x.x "& file,0,true
	logs.Value= "Creando ips para 5.x.x"
    objShell.Run "pito.exe AAA\5.x.x "& file,0,true
	logs.Value= "Creando ips para 4.x.x"
    objShell.Run "pito.exe AAA\4.x.x "& file,0,true
	logs.Value= "Creando ips para 3.x.x"
    objShell.Run "pito.exe AAA\3.x.x "& file,0,true
	logs.Value= "Creando ips para 2.3.x"
    objShell.Run "pito.exe AAA\2.3.x "& file,0,true
	logs.Value= "Creando ips para 2.x.x"
    objShell.Run "pito.exe AAA\2.x.x "& file,0,true
	logs.Value= "Creando ips para 1.x.x"
    objShell.Run "pito.exe AAA\1.x.x "& file,0,true

	objShell.Run "cmd /c xcopy /Y/I ips\*.ips ips\atmosphere\exefs_patches\logo\",0,true	
	objShell.Run "cmd /c move /y ips\*.ips ips\sxos\exefs_patches\logo\",0,true	

   	logs.Value= "Terminado"
	objShell.PopUp "Termine con  "& file &", revisa IPS",8,"Terminado",64
	objShell.Run "cmd /c explorer ips",0,true
	
	'hide and show buttons
	logs.style.display= "none"
	comenz.style.display= "table"
	brow.style.display= "table"
	pngFile.style.display= "table"
End Sub
</SCRIPT>
</HEAD>
<body style="background-color: gray; color: black;text-align: center;" id="body">
